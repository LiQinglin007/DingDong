<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <!--指定toolbar弹出菜单样式-->
        <item name="actionOverflowMenuStyle">@style/toolbarMenuStyle</item>
    </style>

    <!--自定义toolbar菜单样式-->
    <style name="toolbarMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">

        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>

        <!-- 弹出层背景颜色 -->
        <item name="android:popupBackground">@color/color_white</item>

        <!-- 弹出层垂直方向上的偏移，负值会覆盖toolbar -->
        <item name="android:dropDownVerticalOffset">5dp</item>

        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">-2dp</item>

        <!--文字颜色-->
        <item name="android:textColor">@color/default_color</item>
    </style>


    <style name="Setting_Ly_Top">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px_100</item>
        <item name="android:layout_marginTop">@dimen/px_10</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:paddingLeft">@dimen/px_24</item>
        <item name="android:paddingRight">@dimen/px_24</item>
    </style>

    <style name="Setting_Ly" parent="Setting_Ly_Top">
        <item name="android:layout_marginTop">@dimen/px_10</item>
    </style>


    <style name="Setting_Tv_Left">
        <item name="android:textColor">@color/color_666</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/px_30</item>
    </style>

    <style name="Setting_sw_Left" parent="Setting_Tv_Left">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>

    </style>

    <style name="Setting_Tv_Right">
        <item name="android:textColor">@color/color_333</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textSize">@dimen/px_30</item>
    </style>
</resources>
